<div class="page-header">
  <%= link_to new_administrador_exercicio_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Novo Exercicio
  <% end %>
  <h1>Lista de exercicios</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Treino</th>
        <th>Nome</th>
        <th>Descricao</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @exercicios) do |exercicio| %>
        <td><%= link_to exercicio.nome_treino, administrador_treino_path(exercicio.treino_id) %></td>
        <td><%= exercicio.nome %></td>
        <td><%= exercicio.descricao %></td>
        <td><%= link_to 'Mostrar', administrador_exercicio_path(exercicio) %></td>
        <td><%= link_to 'Editar', edit_administrador_exercicio_path(exercicio) %></td>
        <td><%= link_to 'Remover', administrador_exercicio_path(exercicio), method: :delete, data: { confirm: 'VocÃª tem certeza?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
