<div class="page-header">
  <%= link_to new_operador_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Novo Operador
  <% end %>
  <h1>Lista de operadors</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Nome</th>
            <th>Email</th>
            <th>Password</th>
            <th>Password digest</th>
            <th>Administrador</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @operadors) do |operador| %>
            <td><%= operador.nome %></td>
            <td><%= operador.email %></td>
            <td><%= operador.password %></td>
            <td><%= operador.password_digest %></td>
            <td><%= operador.administrador %></td>
            <td><%= link_to 'Mostrar', operador %></td>
        <td><%= link_to 'Editar', edit_operador_path(operador) %></td>
        <td><%= link_to 'Remover', operador, method: :delete, data: { confirm: 'VocÃª tem certeza?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
