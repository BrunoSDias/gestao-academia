<div class="page-header">
  <%= link_to new_endereco_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Novo Endereco
  <% end %>
  <h1>Lista de enderecos</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Cliente</th>
            <th>Rua</th>
            <th>Estado</th>
            <th>Cep</th>
            <th>Cidade</th>
            <th>Complemento</th>
            <th>Numero</th>
            <th>Bairro</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @enderecos) do |endereco| %>
            <td><%= endereco.cliente %></td>
            <td><%= endereco.rua %></td>
            <td><%= endereco.estado %></td>
            <td><%= endereco.cep %></td>
            <td><%= endereco.cidade %></td>
            <td><%= endereco.complemento %></td>
            <td><%= endereco.numero %></td>
            <td><%= endereco.bairro %></td>
            <td><%= link_to 'Mostrar', endereco %></td>
        <td><%= link_to 'Editar', edit_endereco_path(endereco) %></td>
        <td><%= link_to 'Remover', endereco, method: :delete, data: { confirm: 'VocÃª tem certeza?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
